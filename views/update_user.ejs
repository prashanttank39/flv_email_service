
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Templates</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Template</h2>
            <span class="text-light">Use the below form to Update template</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="templete_name" class="text-light">Template Name</label>
            <input type="hidden" name="id" value="<%= template._id %>">
            <input type="text" name="templete_name" value="<%= template.templete_name %>" placeholder="Template Name">
        </div>
        <div class="form-group">
            <label for="frequency" class="text-light">Frequency</label>
            <input type="text" name="frequency" value="<%= template.frequency%>" placeholder="Frequency">
        </div>
        <div class="form-group">
            <label for="email_subject" class="text-light">Subject</label>
            <input type="text" name="email_subject" value="<%= template.email_subject%>" placeholder="Subject">
        </div>
        <div class="form-group">
            <label for="email_body" class="text-light">Body</label>
            <textarea class="form-control"  name="email_body" value="" placeholder="Body" rows="20"><%= template.email_body%></textarea>
          </div>
        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" <%= template.status == 'Active' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" <%= template.status == 'Inactive' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
