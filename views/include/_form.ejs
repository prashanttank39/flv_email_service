 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="templete_name" class="text-light">Template Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="templete_name" value="" placeholder="Template Name">
        </div>
        <div class="form-group">
            <label for="frequency" class="text-light">Frequency</label>
            <input type="text" name="frequency" value="" placeholder="Frequency">
        </div>
        <div class="form-group">
            <label for="email_subject" class="text-light">Subject</label>
            <input type="text" name="email_subject" value="" placeholder="Subject">
        </div>
        <div class="form-group">
            <label for="email_body" class="text-light">Body</label>
            <textarea class="form-control"  name="email_body" value="" placeholder="Body" rows="20"></textarea>
          </div>
        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>